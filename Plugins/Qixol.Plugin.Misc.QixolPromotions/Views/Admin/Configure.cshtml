            </td>
            <td class="adminData">
                @Html.DropDownListFor(model => model.SelectedServicesEndPoint, Model.ServicesEndpointsList, new { @onchange = "endPointChanged(this.value);" })
                @Html.ValidationMessageFor(model => model.SelectedServicesEndPoint)
